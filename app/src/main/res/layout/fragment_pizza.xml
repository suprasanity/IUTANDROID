<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/Napo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="NAPOLITAINE"
        app:layout_constraintBottom_toTopOf="@id/royal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/royal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="ROYALE"
        app:layout_constraintBottom_toTopOf="@+id/fromage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Napo" />

    <Button
        android:id="@+id/fromage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="4Fromage"
        app:layout_constraintBottom_toTopOf="@+id/monta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/royal" />


    <Button
        android:id="@+id/monta"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Montagnarde"
        app:layout_constraintBottom_toTopOf="@+id/raclette"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fromage" />


    <Button
        android:id="@+id/raclette"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Raclette"
        app:layout_constraintBottom_toTopOf="@+id/buttonHawai"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/monta" />

    <Button
        android:id="@+id/buttonHawai"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="hawai"
        app:layout_constraintBottom_toTopOf="@+id/buttonPana"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/raclette" />

    <Button
        android:id="@+id/buttonPana"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Pana"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonHawai"
        app:layout_constraintBottom_toTopOf="@id/buttonGlace"/>

    <Button
        android:id="@+id/buttonGlace"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Glace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonPana"
        app:layout_constraintBottom_toTopOf="@id/reset"/>
    <Button
        android:id="@+id/reset"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Reset"
        app:layout_constraintEnd_toStartOf="@id/buttonPersonalise"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonGlace"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
        android:id="@+id/buttonPersonalise"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Personalise"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/reset"
        app:layout_constraintTop_toBottomOf="@id/buttonGlace"
        app:layout_constraintBottom_toBottomOf="parent"/>





</android.support.constraint.ConstraintLayout>